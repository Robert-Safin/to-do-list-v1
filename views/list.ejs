<%- include('header') %>

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% toDos.forEach(toDo => { %>
  <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" onChange="this.form.submit()" name="checkbox" value="<%= toDo.id %> "/>
      <p><%=toDo.name%></p>
    </div>
  </form>
  <% }); %>
  <form action="/" method="post" class="item">
    <input type="text" placeholder="new task" name="toDo" />
    <button type="submit" name="list" value="<%= listTitle %>">+</button>
  </form>
</div>
<%- include('footer') %>
